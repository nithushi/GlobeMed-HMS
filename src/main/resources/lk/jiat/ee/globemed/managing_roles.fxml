<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.jiat.ee.globemed.ManagingRoles"
            prefHeight="720.0" prefWidth="1200.0"
            style="-fx-background-color: #f4f6f8; -fx-font-family: 'Poppins';">

    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #f4f6f8; -fx-padding: 15; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0;">
            <StackPane>
                <Region prefWidth="50" prefHeight="50"
                        style="-fx-background-color: #e0f2fe; -fx-background-radius: 25;"/>
                <Label text="👥" style="-fx-font-size: 22px;"/>
            </StackPane>
            <VBox spacing="3">
                <Label text="Manage Staff and Permissions"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
                <Label text="Easily manage staff roles and access control"
                       style="-fx-font-size: 13px; -fx-text-fill: #6b7280;"/>
            </VBox>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <HBox spacing="20" style="-fx-padding: 20;">

            <!-- Left Panel - Role Management -->
            <VBox spacing="20" prefWidth="380"
                  style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 4);">

                <!-- Create Role Section -->
                <VBox spacing="12"
                      style="-fx-background-color: #f9fafb; -fx-padding: 15; -fx-background-radius: 10;">
                    <Label text="👥 Create New Role"
                           style="-fx-font-weight: bold; -fx-font-size: 15; -fx-text-fill: #111827;"/>

                    <VBox spacing="8">
                        <Label text="Role Name:"/>
                        <TextField fx:id="txtRoleName" promptText="Enter role name"
                                   style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d1d5db;"/>

                        <Label text="Role Category:"/>
                        <ComboBox fx:id="cmbRoleCategory" prefWidth="320" promptText="Select Role Category"
                                  style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d1d5db;">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Doctor"/>
                                    <String fx:value="Nurse"/>
                                    <String fx:value="Pharmacist"/>
                                    <String fx:value="Administrator"/>
                                    <String fx:value="Technician"/>
                                    <String fx:value="Support Staff"/>
                                </FXCollections>
                            </items>
                        </ComboBox>

                        <Label text="Description:"/>
                        <TextArea fx:id="txtRoleDescription" promptText="Role responsibilities and description"
                                  prefRowCount="3" wrapText="true"
                                  style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d1d5db;"/>
                    </VBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btnCreateRole" text="Create Role" onAction="#onCreateRole"
                                style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-pref-width: 150px; -fx-padding: 10 0;"/>
                        <Button fx:id="btnClearRole" text="Clear" onAction="#onClear"
                                style="-fx-background-color: #e5e7eb; -fx-text-fill: #1e293b; -fx-pref-width: 120px; -fx-padding: 10 0;"/>
                    </HBox>
                </VBox>

                <!-- Existing Roles List -->
                <VBox spacing="12" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: #f9fafb; -fx-padding: 15; -fx-background-radius: 10;">
                    <Label text="📋 Existing Roles"
                           style="-fx-font-weight: bold; -fx-font-size: 15; -fx-text-fill: #111827;"/>
                    <ListView fx:id="listRoles" VBox.vgrow="ALWAYS"
                              style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d1d5db;"/>
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btnEditRole" text="Edit"
                                style="-fx-background-color: #fbbf24; -fx-text-fill: white; -fx-pref-width: 120px; -fx-padding: 10 0;"/>
                        <Button fx:id="btnDeleteRole" text="Delete"
                                style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-pref-width: 120px; -fx-padding: 10 0;"/>
                    </HBox>
                </VBox>

            </VBox>

            <!-- Right Panel - Permissions -->
            <VBox spacing="20" HBox.hgrow="ALWAYS"
                  style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 4);">

                <!-- Role Selection -->
                <HBox spacing="10" alignment="CENTER_LEFT"
                      style="-fx-background-color: #f3f4f6; -fx-padding: 12; -fx-background-radius: 8;">
                    <Label text="🔐 Manage Permissions for:"
                           style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #111827;"/>
                    <ComboBox fx:id="cmbSelectedRole" prefWidth="200" promptText="Select Role"
                              style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d1d5db;"/>
                </HBox>

                <!-- Permissions List -->
                <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" style="-fx-background-color: transparent;">
                    <VBox fx:id="permissionsContainer" spacing="12" style="-fx-padding: 15;"/>
                </ScrollPane>

                <!-- Action Buttons -->
                <HBox spacing="12" alignment="CENTER">
                    <Button fx:id="btnSavePermissions" text="Save Permissions"
                            style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-pref-width: 160px; -fx-padding: 10 0;"/>
                    <Button fx:id="btnResetPermissions" text="Reset"
                            style="-fx-background-color: #f3f4f6; -fx-text-fill: #1e293b; -fx-pref-width: 120px; -fx-padding: 10 0;"/>
                    <Button fx:id="btnLoadTemplate" text="Load Template"
                            style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-pref-width: 150px; -fx-padding: 10 0;"/>
                </HBox>
            </VBox>

        </HBox>
    </center>

</BorderPane>
